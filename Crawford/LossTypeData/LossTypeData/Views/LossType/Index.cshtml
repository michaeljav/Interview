
@model List<LossTypeData.Models.LossType>
@{
    ViewBag.Title = "Loss Type List";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="row" >
     <div class="col-md-12">
         <table class="table table-hover">
             <thead >
                 <tr>
                     <th>ID</th>
                     <th>Code</th>
                     <th>Description</th>
                 </tr>
            </thead>
             <tbody>
                 @foreach (var item in Model)
                 {
                     <tr>
                         <td>@item.LossTypeID</td>
                         <td>@item.LossTypeCode</td>
                         <td>@item.LossTypeDescription</td>
                     </tr>
                 }
             </tbody>
</table>

     </div>

</div>