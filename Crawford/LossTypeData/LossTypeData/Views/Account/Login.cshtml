
@model LossTypeData.Models.Account
    @{
        ViewBag.Title = "Login";
        Layout = "~/Views/Shared/_LayoutPageAccount.cshtml";

    }

  


    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-50">
                @using (Html.BeginForm("Verify", "Account", FormMethod.Post, new { @class = "login100-form" }))
                {
                    <span class="login100-form-title p-b-33">
                        Account Login
                    </span>


                    <div class="wrap-input100 validate-input" >
                        @Html.TextBoxFor(d => d.UserName,"",new { placeholder = "UserName", @class = "input100 form-control" })   
                                         
                        <span class="focus-input100-1"></span>
                        <span class="focus-input100-2"></span>
                    </div>
                    
                        @Html.ValidationMessageFor(d => d.UserName, null, new { @class = "red" })
                   
                    <div class="wrap-input100 rs1 validate-input" >                        
                        @Html.PasswordFor(d => d.Password, new { placeholder = "Password", @class = "input100" })
                        <span class="focus-input100-1"></span>
                        <span class="focus-input100-2"></span>
                    </div>
                   
                        @Html.ValidationMessageFor(d => d.Password, null, new { @class = "red" })
                    
                    <div class="container-login100-form-btn m-t-20">
                        <button type="submit" class="login100-form-btn">
                            Sign in
                        </button>
                    </div>

                    <div class="text-center p-t-45 p-b-4">
                        <span class="txt1">
                            Forgot: <strong>User:gemmela/pass:Archie</strong>
                        </span>

                        <a href="#" class="txt2 hov1">
                            Password? 
                        </a>
                        <span class="">
                            <strong></strong>
                        </span>
                    </div>

                    <div class="text-center">
                        <span class="txt1">
                            Create an account?
                        </span>

                        <a href="#" class="txt2 hov1">
                            Sign up
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
  

